<h1>Cart</h1>
<div id='cart'>
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Amount</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class='btn btn-small js-remove'
                data-id='{{id}}'
              >delete</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <div><b>Sum: </b><p class='price'>{{price}}</p></div>
  {{else}}
    <p>cart is empty</p>
  {{/if}}
</div>